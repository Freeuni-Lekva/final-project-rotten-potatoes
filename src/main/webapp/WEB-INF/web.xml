<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>Archetype Created Web Application</display-name>

  <listener>
    <listener-class>Servlets.ContextListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>addNewItem</servlet-name>
    <servlet-class>Servlets.addNewItem</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addNewItem</servlet-name>
    <url-pattern>/addNewItem</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ChooseNewItemServlet</servlet-name>
    <servlet-class>Servlets.ChooseNewItemServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ChooseNewItemServlet</servlet-name>
    <url-pattern>/addNewItem.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Guest</servlet-name>
    <servlet-class>Servlets.GuestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Guest</servlet-name>
    <url-pattern>/guest</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NewAccount</servlet-name>
    <servlet-class>Servlets.CreateAccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>NewAccount</servlet-name>
    <url-pattern>/createNewAcc</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>Servlets.ProfileServlet</servlet-class>
  </servlet>


  <servlet>
    <servlet-name>newReview</servlet-name>
    <servlet-class>Servlets.CreateAccountServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newReview</servlet-name>
    <url-pattern>/newReview</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productServlet</servlet-name>
    <servlet-class>Servlets.productServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UnfollowServlet</servlet-name>
    <servlet-class>Servlets.UnfollowServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>UnfollowServlet</servlet-name>
    <url-pattern>/unfollowed</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FollowServlet</servlet-name>
    <servlet-class>Servlets.FollowServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FollowServlet</servlet-name>
    <url-pattern>/followed</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ShowReportServlet</servlet-name>
    <servlet-class>Servlets.ShowReportServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ShowReportServlet</servlet-name>
    <url-pattern>/report.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReportResolvedServlet</servlet-name>
    <servlet-class>Servlets.ReportResolvedServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReportResolvedServlet</servlet-name>
    <url-pattern>/report_resolved</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>reportServlet</servlet-name>
    <servlet-class>Servlets.reportServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>reportServlet</servlet-name>
    <url-pattern>/reportForm</url-pattern>
  </servlet-mapping>
</web-app>
